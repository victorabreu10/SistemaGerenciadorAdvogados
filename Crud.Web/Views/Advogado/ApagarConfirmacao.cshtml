@model AdvogadoModel
@{
    ViewData["Title"] = "Confirmação apagar o Advogado";
}
<div class="text center">
    <h3>Realmente deseja apagar o Advogado (@Model.Nome)?</h3>
</div>
<a class="btn btn-primary btn-block" asp-controller="Advogado" asp-action="Index" role = "button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block"  asp-controller="Advogado" asp-action="Apagar" asp-route-id ="@Model.Id"  role= "button">Confirmar exclusão</a>