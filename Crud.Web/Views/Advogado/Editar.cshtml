@model AdvogadoModel
@{
    ViewData["Title"] = "Editar Advogado";
}

<div class="text center">

    <h1 class="display-4">Editar Advogado</h1>

</div>

<form asp-controller="Advogado" asp-action="Alterar" method="post">

<input type="hidden" asp-for="Id" />

  <div class="form-group">        
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Advogado">
     @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">        
    <label for="endereco">Endereço</label>
    <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereco do Advogado">
     @Html.ValidationMessageFor(x => x.Endereco)
  </div>

<div class="form-group">        
    <label for="senioridade">Senioridade</label>
    <input type="text" asp-for="Senioridade" class="form-control" placeholder="Digite a senioridade do Advogado">
    @Html.ValidationMessageFor(x => x.Senioridade)
  </div>

  <button type="submit" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Advogado" role="button">Voltar</a>
</form>
 